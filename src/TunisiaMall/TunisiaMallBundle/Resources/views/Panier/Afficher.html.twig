{% extends "TunisiaMallBundle::layout.html.twig"%}
{% block body %}
    

<div class="container main-container headerOffset">
    <div class="row">
        <div class="breadcrumbDiv col-lg-12">
            <ul class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li><a href="category.html">Category</a></li>
                <li class="active">Cart</li>
            </ul>
        </div>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7 col-xs-6 col-xxs-12 text-center-xs">
            <h1 class="section-title-inner"><span><i
                    class="glyphicon glyphicon-shopping-cart"></i> Shopping cart </span></h1>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar col-xs-6 col-xxs-12 text-center-xs">
            <h4 class="caps"><a href="{{path('tunisia_mall_homepage')}}"><i class="fa fa-chevron-left"></i> Continuer sur le site </a></h4>
        </div>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-7">
            <div class="row userInfo">
                <div class="col-xs-12 col-sm-12">
                    <div class="cartContent w100">
                        <table class="cartTable table-responsive" style="width:100%">
                            <tbody>

                            <tr class="CartProduct cartTableHeader">
                                <td style="width:15%"> Nom et Prix</td>
                                <td style="width:10%" class="delete">&nbsp;</td>
                                <td style="width:10%">Quantite</td>
                                <td style="width:15%">Total</td>
                            </tr>
                       {% for p in panier2%}
                            <tr class="CartProduct">
                                
                                <td>
                                    <div class="CartDescription">
                                        <h4><a href="product-details.html">{{p.nom }}</a></h4>
                                        <div class="price"><span>{{p.prix}} DT</span></div>
                                    </div>
                                </td>
                           <td class="delete"><a href="{{ path('supprimer_panier',{'id': p.id} )}}" title="Delete"> <i
                                        class="glyphicon glyphicon-trash fa-2x"></i></a></td>
                       <script>
                           function calculer(valeur,id_div,id)
                           {
if (window.XMLHttpRequest)    //  Objet standard
		{ 
			xhr = new XMLHttpRequest();     //  Firefox,
			
		} 
		else  if (window.ActiveXObject)      //  Internet
		{
			xhr = new ActiveXObject("Microsoft.XMLHTTP");
		}
		xhr.onreadystatechange = function()
		{ 
	
		if ((xhr.readyState == 4 ) && (xhr.status == 200) )
			
			document.getElementById(id_div).innerHTML = xhr.responseText;

		
		};
                xhr.open("GET","http://localhost/tunisiamallfinalversion/web/calculer.php?valeur="+valeur+"&id="+id,true);
    xhr.send();
    return false;
                           }
                           </script>
                                        
                                <td><select onchange="calculer(this.value,{{p.id}},{{p.id}})">
                                        <option><div id="{{p.id}}"></div></option>    
                                        <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                            <option>6</option>
                                            <option>7</option>
                                            <option>8</option>
                                             <option>9</option>
                                             <option>10</option>



                                            
                                            
                                            
                                            </select></td>
                              <td class="price" id="{{p.id}}"></td>
                            </tr>
                            {% endfor %}
                          

                           
                            </tbody>
                        </table>
                    </div>
                    <!--cartContent-->

                    <div class="cartFooter w100">
                        <div class="box-footer">
                            <div class="pull-left"><a href="{{path('tunisia_mall_homepage')}}" class="btn btn-default"> <i
                                    class="fa fa-arrow-left"></i> &nbsp; Continuer sur le site </a></div>
                            <div class="pull-right">
                               
                            </div>
                        </div>
                    </div>
                    <!--/ cartFooter -->

                </div>
            </div>
            <!--/row end-->

        </div>
        <div class="col-lg-3 col-md-3 col-sm-5 rightSidebar">
            <div class="contentBox">
                <div class="w100 costDetails">
                    <div class="table-block" id="order-detail-content"><a class="btn btn-primary btn-lg btn-block "
                                                                          title="checkout" href="{{path('checkout_panier')}}"
                                                                          style="margin-bottom:20px"> Proceed to
                        checkout &nbsp; <i class="fa fa-arrow-right"></i> </a>

                       
                                </tbody>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End popular -->

        </div>
        <!--/rightSidebar-->

    </div>
    <!--/row-->

    <div style="clear:both"></div>
</div>
<!-- /.main-container -->

<div class="gap"></div>

    {% endblock %}