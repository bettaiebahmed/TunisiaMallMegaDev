{% extends 'TunisiaMallAdministrationBundle::administrateur.html.twig' %}

{% block emplacement %} <li class="active">Ajouter un paack</li>{%endblock%}
{% block content%}
  <div class="page-content-wrap">                

        <div class="row">
            <div class="col-md-6">
                <form action="" method="post" {{ form_enctype(Form) }}>
                    <!-- START VALIDATIONENGINE PLUGIN -->
                    <div class="block">
                        <h4>Ajouter un Promo</h4>                                
                        <form id="validate" role="form" class="form-horizontal" action="javascript:alert('Form #validate submited');">                            
                      <label>Nom de promotion :</label>

                                {{form_widget(Form.nom,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                      
