                                {{form_widget(Form.reduction,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                             <label>Date d√©but:</label>

                                {{form_widget(Form.dateDebut,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                             <label>Date Fin:</label>

                                {{form_widget(Form.dateFin,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                             <label>Id produit:</label>

                                {{form_widget(Form.id_produit,{ 'attr': {'class': 'validate[required,maxSize[8]] form-control'} })}}
                           
                    </div>
                    



                    <div class="btn-group pull-right">
                        {{form_rest(Form)}}
                    </div>     
                </form>                                   
                </form>
            </div>               
        </div>
    </div>
</div>
 {% endblock %}